---
 const SKILLS = [
    "Javascript",
    "Typescript",
    "Testing - TDD",
    "ReactJS",
    "Redux",
    "NodeJS",
    "HTML",
    "CSS",
    "MySQL",
    "Linux",
    "AWS",
    "Network",
    "Metodologías ágiles SCRUM"
 ]

import { languages } from '@/cv.json'

---


<section>
    <span class="container">.<span class="circle"></span></span>
    <div>
       <h2>Skills</h2>
       <ul>
        {
            SKILLS.map((s) => {
                return (
                    <li><span>{s}</span></li>
                )
            })
        }
       </ul>
       <h3>Idiomas</h3>
       <ul>
            {
                languages.map(({ fluency, language }) => {
                    return (
                    <li><span>{`${language} - ${fluency}`}</span></li>
                    )
                })
            }
       </ul>
    </div>
</section>

<style>
     section {
        display: flex;
        justify-content: end;
        width: 100%;
        padding-top: 15px;
        padding-bottom: 15px;

        border-left: 1px solid #2f596e;
        border-right: 1px solid #2f596e;
        padding-right: 15px;
        position: relative;

        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-weight: 400;
    }

    .container {
        width: 100%;
        position: absolute;
        margin-right: 13px;
    }

    .circle {
        width : 15px;
        height: 15px;
        background: #2f596e;
        text-align: start;
        border-radius: 50%;
        color : #2f596e;
    }

    div {
        width: 80%;
        display : flex;
        flex-direction: column;
    }

    h2 {
        padding-top : 15px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-weight: 500;
    }

    h3 {
        padding-top : 10px;
        font-weight: 600;
    }

    ul {
        display : flex;
        flex-wrap: wrap;
        gap: 4px;
        margin-top: 5px;
    }

    li {
        margin: 0;
        padding: 5px;
        background-color: #2f596e;
        border-radius: 8px;
        font-weight: 500;
        opacity: 0.8;
    }

    li > span {
        color: white;
    }
</style>