---
    import { education } from '@/cv.json'
---


<section>
    <h2>Educacion</h2>
    <ul>
        {
            education.map(({ area, institution, startDate, endDate, courses }) => {
                return (
                    <li>
                        <h4>{`${area} | ${institution}`}</h4>
                        <span>{`${startDate} | ${endDate}`}</span>
                        <div>
                        {
                            courses.map((c) => {
                                return (
                                        <span class="hack">
                                            {`${c}`}
                                        </span>
                                        <br/>
                                    )
                            })
                        }
                        </div>
                    </li>
                )
            })
        }
    </ul>
</section>

<style>
    section {
        padding-left: 25px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-weight: 500;
    }

    h4, span, div,h2 {
        margin-top: 5px;
        margin-bottom: 5px;
    }

    div {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        letter-spacing: 0.7px;
    }

    .hack {
        margin : 0;
        font-weight: 400;
    }

    li {
        display: flex;
        flex-direction: column;
    }
</style>