---

import { basics } from '@/cv.json';
import Linkedin from '@/icons/Linkedin.astro';
import Github from '@/icons/Github.astro';
import Mail from '@/icons/Mail.astro';
import Phone from '@/icons/Phone.astro';
import WorldMap from '@/icons/WorldMap.astro';
import Date from '@/icons/Date.astro';

const { profiles, name, phone, email } = basics;

const SOCIAL_ICONS : Record<string, any> = {
    Github,
    Linkedin
}

---

<section>
    <div>
        <span>
            <WorldMap/>
            Argentina, Buenos Aires
        </span>
        <span>
            <Date/>
            27/04/2001
        </span>

        <ul>
            {
                email &&
                <a
                    href={`mailto:${email}`}
                    title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    id={`${email}`}
                >
                    <Mail/>
                </a>
            }
            {
                phone && (
                <a
                    href={`tel:${phone}`}
                    title={`Llamar por teléfono a ${name} al número ${phone}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    id={`${phone}`}
                >
                <Phone />
                </a>
                )
            }
            {
            profiles.map(({ network, url, username }) => {

                const Icon = SOCIAL_ICONS[network];

                return (
                    <a
                     href={url}
                     title={`Visitar el perfil de ${name} en ${network}`}
                     target="_blank"
                     rel="noopener noreferrer"
                     id={`${network}`}
                    >
                        <Icon/>
                    </a>
                )
            })
            }
        </ul>
    </div>
</section>

<style>

    section {
        display: flex;
        justify-content: end;
        width: 100%;
        padding-top: 15px;
        padding-bottom: 15px;

        border-right: 1px solid #2f596e;
        padding-right: 15px;
    }

    div {
        width: 80%;
        display : flex;
        flex-direction: column;
    }

    span {
        display: flex;
        align-items: center;

        margin : 5px;
        gap: 4px;
    }

    ul {
        display : flex;
    }

    svg {
        width: 30px;
        height: 30px;
    }

    a {
        height : 32px;
        width: 32px;
        margin : 5px;
        padding : 5px;
        border: 1px solid #2f596e;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        border-radius: 4px;
        color : #2f596e;    
    }

    a:hover {
        transform : scale(1.1);
        transition: 0.5s ease; 
    }

</style>

